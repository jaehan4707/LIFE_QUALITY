<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.SgdskFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/round_trafficlight">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <View
                        android:id="@+id/redLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/red_circle" />

                    <View
                        android:id="@+id/yellowLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gray_circle" />

                    <View
                        android:id="@+id/greenLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gray_circle" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문결과,"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:fontFamily="@font/bm_dohyeon"
                android:text="당신은 "
                android:textColor="@color/black"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/sgdsk_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:text="@string/good_sleep"/>
            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="정신건강 향상을 위한 올바른 방법!"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/textview_round"
                android:padding="10dp"
                />
            <TextView
                android:layout_marginTop="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필수 설문 문항을 마친 후,\n'건강 도우미'에 준비된 '우울관리법'을 통해 배워봅시다!"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부정적 결과와 불편감 동반 시,\n의사와의 상담을 권유 드립니다"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>