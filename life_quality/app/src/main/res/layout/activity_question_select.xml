<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:text="현재 나의 건강상태는?"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="@font/bm_dohyeon"
        android:background="@color/main_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/questionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintWidth_percent="0.1"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <!-- 각 RadioButton에 대한 제약 조건 추가 -->
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"

                    />
                <RadioButton
                    android:id="@+id/rb5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <RadioButton
                    android:id="@+id/rb6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <RadioButton
                    android:id="@+id/rb7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />

                <RadioButton
                    android:id="@+id/rb8"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <RadioButton
                    android:id="@+id/rb9"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <RadioButton
                    android:id="@+id/rb10"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    style="@style/RadioButtonStyle"
                    />
                <!-- 나머지 RadioButton도 동일하게 추가 -->

            </RadioGroup>

            <LinearLayout
                android:id="@+id/text_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.8"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/group"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="25sp"
                        android:text="영양상태"
                        style="@style/RadioTextStyle"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="25sp"
                        android:text="정신건강"
                        style="@style/RadioTextStyle"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="25sp"
                        android:text="요실금"
                        style="@style/RadioTextStyle"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="25sp"
                        android:text="구강건강"
                        style="@style/RadioTextStyle"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="25sp"
                        android:text="신체활동"
                        style="@style/RadioTextStyle"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textSize="25sp"
                        android:text="수면습관"
                        style="@style/RadioTextStyle"
                        />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="25sp"
                    android:text="노쇠"
                    style="@style/RadioTextStyle"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="25sp"
                    android:text="낙상"
                    style="@style/RadioTextStyle"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="25sp"
                    android:text="삶의 질"
                    style="@style/RadioTextStyle"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textSize="25sp"
                    android:text="사회적건강"
                    style="@style/RadioTextStyle"
                    />


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

        <Button
            android:id="@+id/select_start"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.45"
            android:layout_weight="1"
            app:layout_constraintHeight_percent="0.1"
            android:text="시작하기"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/bm_dohyeon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/main_orange" />

</androidx.constraintlayout.widget.ConstraintLayout>
