<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/type6Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_dohyeon"
        android:text="문항 4"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/type6Title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_grayline"
        android:fontFamily="@font/bm_dohyeon"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="최근 1주일동안 기구를 사용하는 근력운동(아령, 역기, 철봉, 탄성밴드 스트레칭), 팔굽혀펴기,윗몸일으키기,스쿼트(앉았다 일어서기)등의
근력운동을 한 날은 며칠입니까?"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="true"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/type6Answer1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:gravity="center_vertical"
                android:text="전혀 하지 않음"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                tools:ignore="TouchTargetSizeCheck"/>

            <TextView
                android:id="@+id/type6Answer2"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:gravity="center_vertical"
                android:text="1일"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/type6Answer3"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:gravity="center_vertical"
                android:text="2일"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/type6Answer4"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:gravity="center_vertical"
                android:text="3일"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/type6Answer5"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:gravity="center_vertical"
                android:text="4일"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_checkbox"
                android:button="@android:color/transparent"
                android:checked="false"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/type6Answer6"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:gravity="center_vertical"
                android:text="5일 이상"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>