<?xml version="1.0" encoding="utf-8"?>
    <!--주 레이아웃 부분-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_activity">
        <!--  신호등 표시 들어가는 부분  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp">
            <View
                android:id="@+id/red_circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/red_circle"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/yellow_circle"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/green_circle"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/my_inform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_unselected"
                    android:maxHeight="35dp"
                    android:maxWidth="35dp"
                    android:adjustViewBounds="true"
                    android:gravity="right"
                    android:layout_marginLeft="225dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 정보"
                    android:fontFamily="@font/bm_dohyeon"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요?"
                android:fontFamily="@font/bm_dohyeon"
                android:textSize="40dp"
                android:textColor="@color/main_orange"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당 설문조사는"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="여러분들의 건강 상태를"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="설문조사 형태로 진행해\n 건강상태를 알려줍니다"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/q_start"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="시작하기"
                android:textSize="20dp"
                android:backgroundTint="@color/main_orange"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/bm_dohyeon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문조사를 진행하여 \n나의 상태를 확인할 수 있습니다."
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/bm_dohyeon"/>
            <Button
                android:id="@+id/edu"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="건강도우미"
                android:textSize="20dp"
                android:backgroundTint="@color/main_orange"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/bm_dohyeon"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건강에 도움이 되는 \n여러가지 방법을 배울 수 있습니다."
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/bm_dohyeon"/>


        </LinearLayout>
    </LinearLayout>



