<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.SleepFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="15dp">

            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/round_trafficlight">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <View
                        android:id="@+id/redLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/red_circle" />

                    <View
                        android:id="@+id/yellowLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gray_circle" />

                    <View
                        android:id="@+id/greenLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/gray_circle" />
                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/result_info"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="측정결과,"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="어르신은 "
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/sleep_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:text="@string/good_sleep"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수면 건강을 위한 지침서!\n이후 준비된 건강정보를 통해 \n관리 방법을 알아봅시다!"
                android:fontFamily="@font/bm_dohyeon"
                android:lineSpacingExtra="7dp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:background="@drawable/textview_round"
                android:gravity="center"
                />


            <TextView
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부정적 결과와 불편감 동반 시,\n의사와의 상담을 권유 드립니다"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>