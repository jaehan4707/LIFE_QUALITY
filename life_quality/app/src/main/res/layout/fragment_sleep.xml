<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.SleepFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문결과,"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="당신은 "
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/sleep_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:text="@string/good_sleep"/>


            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘부터 수면건강을 위한 \n5계명을 지켜봐요!"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:padding="5dp"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:background="@drawable/textview_round"
                android:gravity="center"
                />
            <TextView
                android:background="@drawable/info_text"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. 자기 30분 전에는 스마트폰을 멀리한다\n2. 아침 기상 알람은 스마트폰 대신 자명종 시계를 이용한다.\n3. 카페인 섭취를 줄인다.\n4. 잠자리는 빛을 최대한 없애 어둡게 한다.\n5. 기상 시간을 일정하게 한다."
                android:fontFamily="@font/bm_dohyeon"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부정적 결과와 불편감 동반 시, \n정밀 검사를 권장 드립니다."
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>