<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPlus">
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="관리자메뉴"
            android:textAlignment="center"
            android:textSize="30sp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#EE931B"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/admin_home"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/home"
            android:background="#EE913B"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plus_question"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#40EE913B"
            android:hint="추가하고싶은 질문의 내용을 적어주세요." />
    </LinearLayout>
    <TextView
        android:layout_marginStart="15dp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="응답 유형"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/plus_question"
        app:layout_constraintStart_toStartOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title">

        <Button
            android:id="@+id/choice"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="선택" />

        <Button
            android:id="@+id/input"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="입력" />
    </LinearLayout>

    <!-- 선택 눌렀을 때 layout-->
    <LinearLayout
        android:id="@+id/chocie_layout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
             >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="응답 개수"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                />
            <EditText
                android:id="@+id/response_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="응답개수를 입력해주세요"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20sp"/>
            <Button
                android:id="@+id/num_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입력"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/admin_plus"
            />
    </LinearLayout>
    <!-- 입력 눌렀을때 layout-->
    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세부 유형"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
          />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/time"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="시간"
                />
            <Button
                android:id="@+id/score"
                android:layout_marginStart="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="점수"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_color"
        android:text="저장하기"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>