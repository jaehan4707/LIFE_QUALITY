<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.TotalResultActivity">

    <TextView
        android:id="@+id/R_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="전체 결과 보기"
        app:layout_constraintHeight_percent="0.1"
        android:gravity="center"
        android:background="@color/main_orange"
        android:fontFamily="@font/bm_dohyeon"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/R_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.8">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                app:layout_constraintVertical_chainStyle="spread"
                android:id="@+id/label"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.25"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/content"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="영양상태"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:textSize="20sp"
                    android:text="정신건강"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="요실금"
                    android:textSize="20sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="구강건강"
                    android:textSize="20sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="신체활동"
                    android:textSize="20sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:textSize="20sp"
                    android:text="수면습관"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="노쇠"
                    android:textSize="20sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="낙상"
                    android:textSize="20sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="삶의 질"
                    android:textSize="20sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.75"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/label"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/mna_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="영양상태"
                    android:textSize="23sp"
                    android:gravity="center_vertical"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/sgdsk_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:textSize="23sp"
                    android:text="정신건강"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/yosil_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="요실금"
                    android:textSize="23sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/mouthhealth_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="구강건강"
                    android:textSize="23sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/ipaq_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:text="신체활동"
                    android:textSize="23sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/sleephabbit_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:textSize="23sp"
                    android:text="수면습관"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/frailty_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="노쇠"
                    android:textSize="23sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/fall_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="낙상"
                    android:textSize="23sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/eq5d_result"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="삶의 질"
                    android:textSize="23sp"
                    style="@style/RadioTextStyle"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/black"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/edu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/main_orange"
        android:textSize="30sp"
        android:text="건강지식 배우러가기"
        android:fontFamily="@font/bm_dohyeon"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"/>
</androidx.constraintlayout.widget.ConstraintLayout>