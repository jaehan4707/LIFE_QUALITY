<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행률"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/bm_dohyeon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"
            android:scaleY="0.4"
            android:progressDrawable="@drawable/progress_custom"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설문이 완료되었습니다."
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bm_dohyeon"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="노쇠란,"
            android:textColor="@color/main_orange"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이가 들어서 생기는 정상적인 노화 과정이 아닌 비정상적인 노화 과정을 의미합니다."
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="본 조사를 통해 "
            android:textSize="19sp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문자의"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 노쇠 정도"
                android:textColor="@color/main_orange"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="를 측정합니다."
                android:textSize="19sp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/round_trafficlight"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="3dp">
                <View
                    android:id="@+id/redLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/red_circle"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:id="@+id/yellowLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/gray_circle"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:id="@+id/greenLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/gray_circle"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설문결과, "
            android:layout_marginTop="20dp"
            android:textSize="19sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설문자의 노쇠 진행 정도는"
            android:layout_marginTop="20dp"
            android:textSize="19sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위험"
                android:textColor="@color/main_orange"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입니다."
                android:textSize="19sp"/>
        </LinearLayout>
        <android.widget.Button
            android:id="@+id/goto_edu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="건강관리로 이동하기"
            android:layout_gravity="center"
            android:background="@drawable/button_round_main"
            android:fontFamily="@font/bm_dohyeon"
            android:layout_marginTop="50dp"/>
    </LinearLayout>




    <Button
        android:id="@+id/nextstage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="다음"
        android:layout_gravity="bottom"
        android:textColor="@color/black"
        android:backgroundTint="@color/main_orange"
        android:fontFamily="@font/bm_dohyeon"
        android:layout_weight="1"/>


</LinearLayout>