<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/type8Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_dohyeon"
        android:text="문항 5"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/type8Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_grayline"
        android:fontFamily="@font/bm_dohyeon"
        android:gravity="center_vertical"
        android:lineSpacingExtra="10dp"
        android:padding="5dp"
        android:text="귀하가 한번에 적어도 집안에서 10분 이상 지속했던 신체활동에 대해서만 생각해 주십시오. 지난 7일간 집안에서 가벼운 물건을 나르거나 유리창을 닦거나 마루를 닦거나 집안을 닦는 것, 쓸기와 같은 중간정도의 신체활동을 한 날은 며칠입니까?"
        android:textColor="@color/black"
        android:textSize="23dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <RadioGroup
                android:id="@+id/group_f8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
                <RadioButton
                    android:id="@+id/rb5"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
                <RadioButton
                    android:id="@+id/rb6"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
                <RadioButton
                    android:id="@+id/rb7"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
                <RadioButton
                    android:id="@+id/rb8"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="17sp"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>