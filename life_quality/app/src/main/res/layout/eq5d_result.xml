<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행률"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/bm_dohyeon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"
            android:scaleY="0.4"
            android:progressDrawable="@drawable/progress_custom"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설문이 완료되었습니다."
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bm_dohyeon"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="본 조사는,"
            android:textSize="19sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문자의 전반적인 "
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삶의 수준을 "
                android:textColor="@color/main_orange"
                android:textSize="19sp"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평가합니다."
            android:textSize="19sp"/>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:background="@drawable/round_trafficlight"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="3dp">
                <View
                    android:id="@+id/redLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/red_circle"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:id="@+id/yellowLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/gray_circle"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:id="@+id/greenLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/gray_circle"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설문결과, "
            android:layout_marginTop="20dp"
            android:textSize="19sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당신의 삶의 수준은 "
            android:layout_marginTop="20dp"
            android:textSize="19sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정상 "
                android:textColor="@color/main_orange"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입니다."
                android:textSize="19sp"/>
        </LinearLayout>
        <android.widget.Button
            android:id="@+id/goto_edu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="건강관리로 이동하기"
            android:layout_gravity="center"
            android:background="@drawable/button_round_main"
            android:fontFamily="@font/bm_dohyeon"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:layout_marginStart="10dp"
            android:id="@+id/nextstage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:backgroundTint="@color/main_orange"
            android:fontFamily="@font/bm_dohyeon"
            android:text="계속하기"
            android:textColor="@color/black" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginEnd="10dp"
            android:id="@+id/complete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="완료하기"
            android:layout_weight="1"
            android:fontFamily="@font/bm_dohyeon"
            />
    </LinearLayout>
</LinearLayout>