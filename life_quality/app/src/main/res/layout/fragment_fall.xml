<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.FallFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="본 조사는, 일상생활 속에서\n넘어지거나 떨어져서 발생하는"
                android:textSize="19sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="낙상 사고"
                    android:textColor="@color/main_orange"
                    android:textSize="19sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에 얼마나 노출되어있는지"
                    android:textSize="19sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평가합니다."
                android:textSize="19sp"/>
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:background="@drawable/round_trafficlight"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="3dp">
                    <View
                        android:id="@+id/redLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/red_circle"
                        android:layout_gravity="center_vertical"/>
                    <View
                        android:id="@+id/yellowLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/gray_circle"
                        android:layout_gravity="center_vertical"/>
                    <View
                        android:id="@+id/greenLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/gray_circle"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문결과, "
                android:layout_marginTop="20dp"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="낙상 위험에 대한 노출 정도는"
                android:layout_marginTop="20dp"
                android:textSize="19sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/result_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위험"
                    android:textColor="@color/main_orange"
                    android:textSize="19sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입니다."
                    android:textSize="19sp"/>
            </LinearLayout>
            <android.widget.Button
                android:id="@+id/goto_edu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="건강관리로 이동하기"
                android:layout_gravity="center"
                android:background="@drawable/button_round_main"
                android:fontFamily="@font/bm_dohyeon"
                android:layout_marginTop="50dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>