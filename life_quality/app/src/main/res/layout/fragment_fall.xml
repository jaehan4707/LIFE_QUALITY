<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.FallFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:padding="15dp">
                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:background="@drawable/round_trafficlight"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="3dp">
                        <View
                            android:id="@+id/redLight"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:background="@drawable/red_circle"
                            android:layout_gravity="center_vertical"/>
                        <View
                            android:id="@+id/yellowLight"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:background="@drawable/gray_circle"
                            android:layout_gravity="center_vertical"/>
                        <View
                            android:id="@+id/greenLight"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:background="@drawable/gray_circle"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                </FrameLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설문결과,"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textColor="@color/black"
                    android:textSize="19sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="낙상 상태는 "
                    android:fontFamily="@font/bm_dohyeon"
                    android:textColor="@color/black"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/fall_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:text="@string/good_sleep"/>


                <TextView
                    android:id="@+id/info"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:breakStrategy="simple"
                    android:text="이 문항은 점수가 높을수록 낙상에 대한 두려움이 높음을 뜻합니다"/>
                <TextView
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:gravity="center"
                    android:text="낙상사고 예방이 최선입니다"
                    android:fontFamily="@font/bm_dohyeon"
                    android:breakStrategy="balanced"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    android:background="@drawable/textview_round"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/info_text"
                    android:fontFamily="@font/bm_dohyeon"
                    android:padding="10dp"
                    android:text="1.과음을 삼가고, 일어나거나 움직이기 시작할 때 천천히 행동하기\n2.위험장소에는 안전장치 및 밝은\n조명 설치,전선 물건 등 정리하기\n3.근력과 유연성을 높이기 위해서\n꾸준한 운동 실시하기"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="8dp"
                    android:textSize="20sp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="출처 : 질병관리청 [어르신 낙상 주의] 낙상 사고 \n예방으로 안전생활 하세요"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="부정적 결과와 불편감 동반 시,\n의사와의 상담을 권유 드립니다"
                    android:fontFamily="@font/bm_dohyeon"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>