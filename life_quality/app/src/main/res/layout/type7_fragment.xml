<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/type7Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bm_dohyeon"
        android:text="문항 3"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/type7Title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textview_grayline"
        android:fontFamily="@font/bm_dohyeon"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="낮잠을 잔다면, 일주일에 몇일 정도 입니까?"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <RadioGroup
                android:id="@+id/group_f7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"/>
                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:layout_marginTop="20dp"/>
                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:layout_marginTop="20dp"/>
                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:layout_marginTop="20dp"/>
                <RadioButton
                    android:id="@+id/rb5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:layout_marginTop="20dp"/>
                <RadioButton
                    android:id="@+id/rb6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:layout_marginTop="20dp"/>
                <RadioButton
                    android:id="@+id/rb7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_radiobutton"
                    android:button="@null"
                    android:layout_marginTop="20dp"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/type7Answer1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="예"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bm_dohyeon"/>
                <TextView
                    android:id="@+id/type7Answer2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="아니오"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bm_dohyeon"/>
                <TextView
                    android:id="@+id/type7Answer3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="아니오"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bm_dohyeon"/>
                <TextView
                    android:id="@+id/type7Answer4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="아니오"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bm_dohyeon"/>
                <TextView
                    android:id="@+id/type7Answer5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="아니오"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bm_dohyeon"/>
                <TextView
                    android:id="@+id/type7Answer6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="아니오"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bm_dohyeon"/>
                <TextView
                    android:id="@+id/type7Answer7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="아니오"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bm_dohyeon"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>