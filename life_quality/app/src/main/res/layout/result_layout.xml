<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진행률"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/bm_dohyeon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="100"
            android:scaleY="0.4"
            android:progressDrawable="@drawable/progress_custom"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설문이 완료되었습니다."
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bm_dohyeon"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/survey_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="설문설명"
            android:textSize="20sp"
            android:fontFamily="@font/bm_dohyeon"
            />
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:background="@drawable/round_trafficlight">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="3dp">
                <View
                    android:id="@+id/redLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/red_circle"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:id="@+id/yellowLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/gray_circle"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:id="@+id/greenLight"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/gray_circle"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/move_health"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_main"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="건강관리 이동하기"
            android:fontFamily="@font/bm_dohyeon"
            />

    </LinearLayout>



    <Button
        android:id="@+id/nextstage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="다음"
        android:layout_gravity="bottom"
        android:textColor="@color/black"
        android:backgroundTint="@color/main_orange"
        android:fontFamily="@font/bm_dohyeon"
        android:layout_weight="1"/>


</LinearLayout>