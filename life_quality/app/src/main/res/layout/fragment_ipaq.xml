<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.IpaqFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="20dp">
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:background="@drawable/round_trafficlight"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="3dp">
                    <View
                        android:id="@+id/redLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/red_circle"
                        android:layout_gravity="center_vertical"/>
                    <View
                        android:id="@+id/yellowLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/gray_circle"
                        android:layout_gravity="center_vertical"/>
                    <View
                        android:id="@+id/greenLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/gray_circle"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이 문항은 점수가 높을수록\n신체활동을 많이 한다는 것을 뜻합니다"
                android:fontFamily="@font/bm_dohyeon"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/info_text"
                android:padding="5dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문결과,"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신의 운동 건강 상태는 "
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/result_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활동군 "
                    android:fontFamily="@font/bm_dohyeon"
                    android:textColor="@color/main_orange"
                    android:textSize="19sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입니다."
                    android:fontFamily="@font/bm_dohyeon"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>
            </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신체활동 향상을 위한 올바른 방법!"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/textview_round"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="필수 설문 문항을 마친 후, '건강 도우미'에\n준비된 '운동 건강관리법'을 통해 배워봅시다!"
                android:fontFamily="@font/bm_dohyeon"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부정적 결과와 불편감 동반 시, 정밀 검사를 권장 드립니다."
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>