<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.MnaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="20dp">
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:background="@drawable/round_trafficlight"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="3dp">
                    <View
                        android:id="@+id/redLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/red_circle"
                        android:layout_gravity="center_vertical"/>
                    <View
                        android:id="@+id/yellowLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/gray_circle"
                        android:layout_gravity="center_vertical"/>
                    <View
                        android:id="@+id/greenLight"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/gray_circle"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </FrameLayout>


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설문결과,"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:fontFamily="@font/bm_dohyeon"
                android:text="당신은 "
                android:textColor="@color/black"
                android:textSize="19sp" />
            <TextView
                android:id="@+id/mna_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:text="@string/good_sleep"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영양상태 향상을 위한 \n균형 있는 영양섭취!"
                android:fontFamily="@font/bm_dohyeon"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/textview_round"
                android:padding="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="필수 설문 문항을 마친 후,\n'건강 도우미'에 준비된 '영양관리법'을 통해 배워봅시다!"
                android:fontFamily="@font/bm_dohyeon"
                android:textSize="20sp"
                />

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부정적 결과와 불편감 동반 시,\n의사와의 상담을 권유 드립니다"
                android:fontFamily="@font/bm_dohyeon"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>